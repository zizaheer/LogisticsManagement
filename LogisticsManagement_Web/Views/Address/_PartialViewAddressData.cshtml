@using LogisticsManagement_Web.Models;
@model IEnumerable<ViewModel_AddressDetail>


<script>
    $(document).ready(function () {

        if ($.fn.dataTable.isDataTable('#address-list')) {
            $('#address-list').DataTable().destroy();
        }
        $('#address-list').DataTable({
            "order": [[0, "desc"]],
            "paging": true,
            info: true,
            searching: true,
            "language": {
                searchPlaceholder: 'Search...',
                search: "<i class='fa fa-search'></i>",

            }
        });
    });
</script>


<table id="address-list" class="table table-sm table-striped table-bordered lms_dataTable" cellspacing="0" style="width:100%; margin-top: -1px !important; font-size:.8em">
    <thead class="dtTheadBg">
        <tr>
            <th>Unit #</th>
            <th>Address line</th>
            <th>City</th>
            <th>Province</th>
            <th>Country</th>
            <th>Postcode</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.UnitNumber
                </td>
                <td>
                    @item.AddressLine
                </td>
                <td>
                    @item.CityName
                </td>
                <td>
                    @item.ProvinceShortCode
                </td>
                <td>
                    @item.CountryName
                </td>
                <td>
                    @item.PostCode
                </td>
                <td>
                    @item.EmailAddress1
                </td>
                <td>
                    @item.PrimaryPhoneNumber
                </td>

                <td style="width:80px">
                    <button id="btnEdit" data-addressid='@item.AddressId' class="btn-primary btnEdit" type="button"><i class="fa fa-pencil"></i> </button>
                    <button id="btnDelete" data-addressid='@item.AddressId' class="btn-danger btnDelete " data-toggle="modal" data-target="#alert-modal" type="button"><i class="fa fa-trash"></i> </button>
                </td>
            </tr>
        }


    </tbody>
</table>

<script src="~/js/address.js"></script>
