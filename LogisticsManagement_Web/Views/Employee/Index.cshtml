@using LogisticsManagement_Web.Models;
@model ViewModel_Employee

@{
    ViewData["Title"] = "Employee";
}

<h3>
    @ViewData["Title"]
</h3>
<hr style="margin-bottom:40px" />


<form id="frmEmployeeForm">
    <div class="row">
        <div class="col-sm-12 form-group">
            <input class="col-2 form-control form-control-sm" placeholder="&#xF002; Employee id" style="font-family:Arial, FontAwesome" id="txtEmployeeId" type="number" min="1" name="txtEmployeeId" readonly>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-4">
            <small>
                <b>
                    <label id="lblFirstName" for="txtFirstName">First name</label>
                </b>
            </small>
            <input class="form-control form-control-sm" id="txtFirstName" placeholder="First name" name="txtFirstName" type="text" maxlength="20" required />
        </div>
        <div class="form-group col-sm-4">
            <small>
                <b>
                    <label id="lblLastName" for="txtLastName">Last name</label>
                </b>
            </small>
            <input class="form-control form-control-sm" id="txtLastName" placeholder="Last name" name="txtLastName" maxlength="20" type="text" />
        </div>
    </div>

    <div class="row">

        <div class="form-group col-sm-3">
            <small>
                <b>
                    <label id="lblDrivingLicenseNo" for="txtDrivingLicenseNo">Driver's license</label>
                </b>
            </small>
            <input class="form-control form-control-sm" id="txtDrivingLicenseNo" name="txtDrivingLicenseNo" placeholder="Drivers license" maxlength="50" type="text" />
        </div>
        <div class="form-group col-sm-3">
            <small>
                <b>
                    <label id="lblSocialInsuranceNo" for="txtSocialInsuranceNo">Social insurance#</label>
                </b>
            </small>
            <input class="form-control form-control-sm" id="txtSocialInsuranceNo" placeholder="Social insurance" name="txtSocialInsuranceNo" type="text" maxlength="20" />
        </div>
        <div class="form-group col-sm-2">
            <small>
                <b>
                    <label for="ddlEmployeeTypeId">Employee type</label>
                </b>
            </small>
            <select id="ddlEmployeeTypeId" class="form-control form-control-sm" name="ddlEmployeeTypeId">
                @foreach (var item in ViewBag.EmployeeTypes)
                {
                    <option value="@item.Id"> @item.EmployeeTypeName </option>
                }

            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <small>
                <b>
                    <label id="" for="">Wages type and rate</label>
                </b>
            </small>
            <hr style="margin-top:-5px;margin-bottom:10px" />
        </div>

        <div class="form-group col-sm-2">
            <div class="form-check form-check-inline mr-1">
                <input class="form-check-input" id="chkIsHourlyPaid" type="checkbox" name="chkIsHourlyPaid">
                <small>
                    <b><label class="form-check-label" for="chkIsHourlyPaid">Hourly?</label></b>
                </small>
            </div>
        </div>
        <div class="form-group col-sm-2">
            <div class="form-check form-check-inline mr-1">
                <input class="form-check-input" id="chkIsSalaryEmployee" type="checkbox" name="chkIsSalaryEmployee">
                <small>
                    <b><label class="form-check-label" for="chkIsSalaryEmployee">Salaried?</label></b>
                </small>
            </div>
        </div>
        <div class="form-group col-sm-2">
            <div class="form-check form-check-inline mr-1">
                <input class="form-check-input" id="chkIsCommissionProvided" type="checkbox" name="chkIsCommissionProvided">
                <small>
                    <b><label class="form-check-label" for="chkIsCommissionProvided">Commission?</label></b>
                </small>
            </div>
        </div>
        <div class="form-group col-sm-2">
            <div class="form-check form-check-inline mr-1">
                <input class="form-check-input" id="chkIsFuelProvided" type="checkbox" name="chkIsFuelProvided">
                <small>
                    <b><label class="form-check-label" for="chkIsFuelProvided">Fuel?</label></b>
                </small>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-2">
            <input class="form-control form-control-sm" id="txtHourlyRate" placeholder="Rate" name="txtHourlyRate" step=".01" type="number" min="1" max="999" disabled />
        </div>
        <div class="form-group col-sm-2">
            <input class="form-control form-control-sm" id="txtSalaryAmount" placeholder="Amount" name="txtSalaryAmount" type="number" min="1" max="99999999" step=".01" disabled />
        </div>
        <div class="form-group col-sm-2">
            <input class="form-control form-control-sm" id="txtCommissionAmount" placeholder="Comm. amount" name="txtCommissionAmount" type="number" min="0" step=".01" max="100" disabled />
        </div>
        <div class="form-group col-sm-2">
            <input class="form-control form-control-sm" id="txtFuelSurchargePercentage" placeholder="Fuel surcharge" name="txtFuelSurchargePercentage" type="number" step=".01" min="0" max="100" disabled />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-2">
            <small>
                <b>
                    <label for="ddlSalaryTermId">Wages term</label>
                </b>
            </small>
            <select id="ddlSalaryTermId" class="form-control form-control-sm">
                <option value="0"> - Wages Term - </option>
                <option value="1"> Weekly </option>
                <option value="2"> Bi-Weekly </option>
                <option value="3"> Quarterly </option>
                <option value="4"> Monthly </option>
            </select>
        </div>
        <div class="form-group col-sm-2">
            <small>
                <b>
                    <label for="txtRadioInsuranceAmount">Radio insurance amnt.</label>
                </b>
            </small>
            <input class="form-control form-control-sm" id="txtRadioInsuranceAmount" placeholder="Radio insurance" name="txtRadioInsuranceAmount" type="number" step=".01" max="9999" />
        </div>
        <div class="form-group col-sm-2">
            <small>
                <b>
                    <label for="txtInsuranceAmount">Insurance amnt.</label>
                </b>
            </small>
            <input class="form-control form-control-sm" id="txtInsuranceAmount" placeholder="Insurance" name="txtInsuranceAmount" type="number" step=".01" max="9999" />
        </div>


    </div>




    <div class="row">
        <div class="col-sm-12">
            <small>
                <b>
                    <label id="" for="">Address info (optional)</label>
                </b>
            </small>
            <hr style="margin-top:-5px;margin-bottom:10px" />
        </div>

        <div class="col-sm-8">
            <div class="row">
                <div class="form-group col-sm-3">
                    <input class="form-control form-control-sm" id="txtUnitNumber" placeholder="Unit " name="txtUnitNumber" type="text" maxlength="20" />
                </div>
                <div class="form-group col-sm-9">
                    <input class="form-control form-control-sm" id="txtAddressLine" placeholder="Address line" name="txtAddressLine" type="text" maxlength="150" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-5">
                    <select class="form-control form-control-sm" id="ddlCityId" name="ddlCityId">
                        <option value="0">-- Select --</option>
                        @foreach (var city in Model.Cities)
                        {
                            var selected = false;
                            if (city.Id == 335)
                            {
                                selected = true;
                            }
                            <option value="@city.Id" selected="@selected">@city.CityName</option>
                        }
                    </select>
                </div>
                <div class="form-group col-sm-2">
                    <select class="form-control form-control-sm" id="ddlProvinceId" name="ddlProvinceId">
                        <option value="0">-- Select --</option>
                        @foreach (var province in Model.Provinces)
                        {
                            var selected = false;
                            if (province.Id == 7)
                            {
                                selected = true;
                            }
                            <option value="@province.Id" selected="@selected">@province.ShortCode</option>
                        }
                    </select>
                </div>
                <div class="form-group col-sm-5">
                    <select class="form-control form-control-sm" id="ddlCountryId" name="ddlCountryId">
                        <option value="0">-- Select --</option>
                        @foreach (var country in Model.Countries)
                        {
                            var selected = false;
                            if (country.Id == 41)
                            {
                                selected = true;
                            }
                            <option value="@country.Id" selected="@selected">@country.CountryName</option>
                        }
                    </select>
                </div>

            </div>
            <div class="row">
                <div class="form-group col-sm-3">
                    <input class="form-control form-control-sm" id="txtPostCode" placeholder="Postcode" name="txtPostCode" type="text" maxlength="20" />
                </div>
                <div class="form-group col-sm-9">
                    <input class="form-control form-control-sm" id="txtEmailAddress" placeholder="Email" name="txtEmailAddress" type="text" maxlength="150" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-4">
                    <input class="form-control form-control-sm" id="txtMobileNo" name="txtMobileNo" placeholder="Mobile" type="text" maxlength="20" />
                </div>
                <div class="form-group col-sm-4">
                    <input class="form-control form-control-sm" id="txtFaxNo" name="txtFaxNo" placeholder="Fax" type="text" maxlength="20" />
                </div>
                <div class="form-group col-sm-4">
                    <input class="form-control form-control-sm" id="txtPhoneNumber" name="txtPhoneNumber" placeholder="Phone" type="text" maxlength="20" />
                </div>
            </div>
        </div>

    </div>

    <div class="row" style="margin-top:20px; margin-bottom:20px">
        <div class="col-sm-12">
            <div class="form-check form-check-inline mr-1">
                <input class="form-check-input" id="chkIsActive" type="checkbox" name="chkIsActive">
                <small>
                    <b><label class="form-check-label" for="chkIsActive" style="color:#007bd7">Tick to make active?</label> </b>
                </small>
            </div>
        </div>
    </div>

    <hr />
    <button type="button" class="btn btn-sm btn-primary" id="btnNew"><i class="fa fa-plus-circle"></i> New</button>
    <button type="submit" class="btn btn-sm btn-success" id="btnSave"><i class="fa fa-save"></i> Save record</button>

</form>

<div class="row">
    <div class="col-md-12 input-group" style="margin-top:40px">
        <h3>Existing employees</h3>

        <button style="margin-left:10px;margin-right:15px; margin-top:4px;height:27px" class="btn btn-sm btn-danger" id="btnDownloadData"><i class="fa fa-download"></i> Load employee </button>
        <div style="margin-top:5px">
            <span id="spinnerLoadingDataTable" style="display:none">
                <span class="spinner-border spinner-border-sm text-primary" role="status" aria-hidden="true" style="margin-right:5px"></span>
                <span style="margin-right:20px">Loading...</span>
            </span>
        </div>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-sm-12">
        <div style="display: block; max-height: 240px; min-height: 80px; padding:10px; overflow-y:scroll; overflow-x:hidden; border:1px solid #c3c3c3; margin-bottom:15px" id="loadDataTable">
            <partial name="_PartialViewEmployeeData" />
        </div>
    </div>

</div>

<script src="~/js/employee.js"></script>
