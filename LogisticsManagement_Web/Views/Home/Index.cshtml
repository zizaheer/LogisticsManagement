@{
    ViewData["Title"] = "";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-lg-12" style="margiN:20px 0px 30px 0px; ">
          <p>
              Hello <label>@ViewBag.FirstName</label>! <br />
              You have <strong><label id="orderNo" style="color:#ff0000; font-size:1.2em">@ViewBag.OrderCount</label></strong> order/s yet to be picked up @*by <strong><label id="pickupDate">dd-MMM-yy</label></strong>*@
          </p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <p>
            <i class="fa fa-paper-plane-o"></i> <strong>ORDERS & PAYMENTS</strong>
            <hr />
        </p>
    </div>
</div>

<div class="row">
    <div class="col-sm-1">
        <a asp-controller="Order" asp-action="Index">
            <div class="dashboard-task-button">
                <img src="~/images/flaticons-64x64/logistics-delivery.png" />

                <b><label style="text-decoration:underline; cursor:pointer">DELIVERY</label></b>
            </div>
        </a>
    </div>
    <div class="col-sm-1">
        <a asp-controller="MiscellaneousOrder" asp-action="Index">
            <div class="dashboard-task-button">
                <img src="~/images/flaticons-64x64/effort.png" />
                <b><label style="text-decoration:underline; cursor:pointer">MISC.</label></b>
            </div>
        </a>
    </div>
    <div class="" style="margin-top:20px; text-align:center; padding-left:15px; padding-right:20px">
        |
    </div>


    <div class="col-sm-1">
        <a asp-controller="Invoice" asp-action="Index">
            <div class="dashboard-task-button">
                <img src="~/images/flaticons-64x64/invoice.png" />
                <b><label style="text-decoration:underline; cursor:pointer">INVOICE</label></b>
            </div>
        </a>
    </div>
    <div class="col-sm-1">
        <a asp-controller="Invoice" asp-action="InvoicePayment">
            <div class="dashboard-task-button">
                <img src="~/images/flaticons-64x64/online-payment.png" />
                <b><label style="text-decoration:underline; cursor:pointer">PAYMENTS</label></b>
            </div>
        </a>
    </div>

    <div class="" style="margin-top:20px; text-align:center; padding-left:15px; padding-right:20px">
        |
    </div>

    <div class="col-sm-1">
        <a asp-controller="Home" asp-action="Privacy">
            <div class="dashboard-task-button">
                <img src="~/images/flaticons-64x64/boxes.png" />
                <b><label style="text-decoration:underline; cursor:pointer">STORAGE</label></b>
            </div>
        </a>
    </div>
    <div class="col-sm-1">
        <a asp-controller="Home" asp-action="Privacy">
            <div class="dashboard-task-button">
                <img src="~/images/flaticons-64x64/delivery-cart.png" />
                <b><label style="text-decoration:underline; cursor:pointer">DELIVER</label></b>
            </div>
        </a>
    </div>


</div>

<br /><br />


<div class="row">
    <div class="col-lg-12">
        <p>
            <i class="fa fa-building-o"></i> <strong>ADMINISTRATION</strong>
            <hr />
        </p>
    </div>
</div>

<div class="row">
    <div class="col-sm-1">
        <a asp-controller="Customer" asp-action="Index">
            <div class="dashboard-task-button">
                <img src="~/images/flaticons-64x64/add-friend.png" />

                <b><label style="text-decoration:underline; cursor:pointer">CUSTOMER</label></b>
            </div>
        </a>
    </div>
    <div class="col-sm-1">
        <a asp-controller="Employee" asp-action="Index">
            <div class="dashboard-task-button">
                <img src="~/images/flaticons-64x64/boss.png" />
                <b><label style="text-decoration:underline; cursor:pointer">EMPLOYEE</label></b>
            </div>
        </a>
    </div>
  
    <div class="col-sm-1">
        <a asp-controller="Address" asp-action="Index">
            <div class="dashboard-task-button">
                <img src="~/images/flaticons-64x64/location-pin.png" />
                <b><label style="text-decoration:underline; cursor:pointer">ADDRESS</label></b>
            </div>
        </a>
    </div>
    <div class="col-sm-1">
        <a asp-controller="Payee" asp-action="Index">
            <div class="dashboard-task-button">
                <img src="~/images/flaticons-64x64/contact.png" />
                <b><label style="text-decoration:underline; cursor:pointer">PAYEE</label></b>
            </div>
        </a>
    </div>

    <div class="" style="margin-top:20px; text-align:center; padding-left:15px; padding-right:20px">
        |
    </div>

    <div class="col-sm-1">
        <a asp-controller="Tariff" asp-action="Index">
            <div class="dashboard-task-button">
                <img src="~/images/flaticons-64x64/calculator.png" />
                <b><label style="text-decoration:underline; cursor:pointer">TARIFF</label></b>
            </div>
        </a>
    </div>
    <div class="col-sm-1">
        <a asp-controller="Configuration" asp-action="Index">
            <div class="dashboard-task-button">
                <img src="~/images/flaticons-64x64/test.png" />
                <b><label style="text-decoration:underline; cursor:pointer">CONFIGURATION</label></b>
            </div>
        </a>
    </div>
</div>






