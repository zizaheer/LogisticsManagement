@using LogisticsManagement_Poco;
@model List<Lms_InvoicePoco>

<script>
    $(document).ready(function () {
        if ($.fn.dataTable.isDataTable('#customer-paid-invoices')) {
            $('#customer-paid-invoices').DataTable().destroy();
        }
        $('#customer-paid-invoices').DataTable({
            "order": [[0, "asc"]],
            "paging": false,
            "info": false,
            "searching": false
        });
    });
</script>


<table id="customer-paid-invoices" class="table table-sm table-striped lms_dataTable" cellspacing="0" style="width:100%; margin-top: -1px !important; font-size:.75em">
    <thead>
        <tr style="background-color:#ebffad">
            <th>Cust. Name</th>
            <th>Inv. #</th>
            <th>Inv. Date</th>
            <th>Inv. Amnt</th>
            <th>Paid Amnt</th>
            <th>Cheque No.</th>
            <th>Cheque Date</th>
            <th>Bank Name</th>

            <th>Print</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <b>@item.BillerCustomerId asdasda asd as das das dasd as da</b>
            </td>
            <td>
                <div class="form-check-inline">
                    <b>@item.Id</b>
                </div>
            </td>

            <td>
                @item.CreateDate.ToString("dd-MMM-yyyy")
            </td>
            <td>
                @item.TotalInvoiceAmount
            </td>
            <td>
                @item.PaidAmount
            </td>
            <td>
                @item.TotalInvoiceAmount
            </td>
            <td>
                @item.TotalInvoiceAmount
            </td>
            <td>
                @item.TotalInvoiceAmount
            </td>

            <td>
                <button class="btn-primary smallGridIcon btnPrintPaidInvoice" data-invoiceid="@item.Id" title="Print invoice" type="button"><i class="fa fa-print"></i></button>
            </td>
        </tr>
        }

    </tbody>

</table>

<script src="~/js/invoice.js"></script>
