@using LogisticsManagement_Web.Models;
@model List<ViewModel_CustomerWithPendingInvoice>

<script>
    $(document).ready(function () {
        if ($.fn.dataTable.isDataTable('#customerdues-list')) {
            $('#customerdues-list').DataTable().destroy();
        }
        $('#customerdues-list').DataTable({
            "order": [[2, "asc"]],
            "paging": false,
            "info": false,
            "searching": false
        });
    });
</script>

<style>
    /*.lnkCollectPayment {
        background-color: #b50000;
        padding: 2px 4px 2px 4px;
        color: #fff;
        border-radius: 3px
    }*/
    .lnkPaidInvoice {
        /*border:1px solid #eee;*/
        background-color: #037e09;
        padding: 2px 8px 2px 8px;
        color: #fff;
        border-radius: 3px
    }
</style>
<table id="customerdues-list" class="table table-sm table-striped lms_dataTable" cellspacing="0" style="width:100%; margin-top: -1px !important; font-size:.75em">
    <thead>
        <tr style="background-color:#ebffad">
            <th>Collect</th>
            <th>Biller Id</th>
            <th>Biller name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Number of invoices due</th>
            <th>Total Due</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @{
                        if (item.TotalDue == 0)
                        {
                            <a data-toggle="modal" id="btnViewInvoice" class="lnkCollectPayment" data-customerid="@item.CustomerId" data-customername="@item.CustomerName" href="#">Open</a>
                        }
                        else
                        {
                            <a data-toggle="modal" id="btnCollectPayment" class="btn-danger smallGridIcon lnkCollectPayment" data-customerid="@item.CustomerId" data-customername="@item.CustomerName" href="#">Open</a>
                            <a data-toggle="modal" id="btnViewInvoice" class="lnkPaidInvoice" data-customerid="@item.CustomerId" data-customername="@item.CustomerName" href="#">Paid</a>
                        }

                    }
                </td>
                <td>
                    @item.CustomerId
                </td>
                <td>
                    @item.CustomerName
                </td>
                <td>
                    @item.CustomerAdress
                </td>

                <td>
                    @item.CustomerPhone
                </td>

                <td>
                    @item.NumberOfInvoices
                </td>

                <td>
                    @item.TotalDue
                </td>
            </tr>
        }

    </tbody>

</table>

<script src="~/js/invoice.js"></script>
