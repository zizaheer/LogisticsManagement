@using LogisticsManagement_Poco;
@model IEnumerable<App_UserPoco>


<script>
    $(document).ready(function () {
        if ($.fn.dataTable.isDataTable('#user-list')) {
            $('#customer-list').DataTable().destroy();
        }
        $('#user-list').DataTable({
            "order": [[0, "desc"]],
            "paging": true,
            info: true,
            searching: true,
            "language": {
                searchPlaceholder: 'Search...',
                search: "<i class='fa fa-search'></i>",

            }
        });
    });
</script>

<div class="row">
    <div class="col-sm-12">
        <table id="user-list" class="table table-sm table-striped table-bordered lms_dataTable" cellspacing="0" style="width:100%; margin-top: -1px !important; font-size:.8em">
            <thead class="dtTheadBg">
                <tr>
                    <th>User Name</th>
                    <th>Emp. Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Active?</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.EmployeeId
                    </td>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td>
                        @item.EmailAddress
                    </td>
                    <td>
                        @item.IsActive
                    </td>

                    <td>
                        <button id="btnEdit" data-userid='@item.Id' class="btn-primary btnEdit" type="button"><i class="fa fa-pencil"></i> </button>
                        <button id="btnDelete" data-userid='@item.Id' class="btn-danger btnDelete" data-toggle="modal" data-target="#alert-modal" type="button"><i class="fa fa-trash"></i> </button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/js/app-user.js"></script>
